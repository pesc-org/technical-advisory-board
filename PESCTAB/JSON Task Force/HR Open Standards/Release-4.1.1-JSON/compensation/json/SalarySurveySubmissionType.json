{
    "$schema": "http://schema.hropenstandards.org/4_0/common/json/meta/hros.json",
    "version": "4.1.0",
    "title": "SalarySurveySubmissionType",
    "description": "A record of Salary Survey to capture details of related employment and organization",
    "allOf": [
        { "$ref": "../../common/json/base/NounType.json#" }
    ],
    "type": "object",
    "definitions": {
        "SalarySurveySubmissionItem": {
            "type": "object",
            "properties": {
                "match": { "$ref": "MatchType.json#" },
                "hireDate": { "$ref": "../../common/json/base/DateType.json#" },
                "deployment": {
                    "type": "object",
                    "allOf": [
                        { "$ref": "../../common/json/work/DeploymentType.json#" }
                    ],
                    "properties": {
                        "employeeRecordIdentifier": { "$ref": "../../common/json/base/IdentifierType.json#" },
                        "shiftCompensation": { "$ref": "ShiftCompensationType.json#" },
                        "job": {
                            "type": "object",
                            "allOf": [
                                { "$ref": "../../common/json/work/JobType.json#" }
                            ],
                            "required": [ "title" ]
                        }
                    }
                },
                "reward": {
                    "type": "array",
                    "items": { "$ref": "RewardType.json#" },
                    "minItems": 1
                },
                "longTermIncentivePlan": {
                    "type": "array",
                    "items": { "$ref": "LongTermIncentivePlanType.json#" }
                }
            },
            "required": [ "deployment", "reward" ]
        }
    },
    "properties": {
        "salarySurveySubmission": {
            "type": "array",
            "items": { "$ref": "#/definitions/SalarySurveySubmissionItem" },
            "minItems": 1
        }
    },
    "required": [ "salarySurveySubmission" ]
}