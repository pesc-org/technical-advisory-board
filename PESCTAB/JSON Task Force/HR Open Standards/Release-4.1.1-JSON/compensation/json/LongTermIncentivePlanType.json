{
	"$schema": "http://schema.hropenstandards.org/4_0/common/json/meta/hros.json",
	"version": "4.1.0",
	"title": "LongTermIncentivePlanType",
	"description": "Details of long term incentive plans",
	"type": "object",
	"properties": {
		"planId": { "$ref": "../../common/json/base/NameType.json#" },
		"planType": {
			"description": "A set of codes classifying the compensation stock grant types.",
			"enum": [
				"Non-Qualified Option", 
				"Qualified Option", 
				"Restricted Stock / RSUs", 
				"Performance-Based Stock", 
				"Unconditional Stock", 
				"Phantom Stock / SARs"
			]
		},
		"eligibleIndicator": { 
			"description": "Is the Employee eligible for this reward or not",
			"$ref": "../../common/json/base/IndicatorType.json#" 
		}, 		
		"grantType": {
			"description": "A set of codes classifying the compensation stock grant types.",
			"enum": [
				"Performance",
				"Annual",
				"Signon",
				"Retention"
			]
		},		
		"grantFrequency": { 
			"description": "Expected frequency of the grant of reward in years",
			"$ref": "../../common/json/base/NumberType.json#" 
		},	
		"grantDate": { "$ref": "../../common/json/base/DateType.json#" },
		"grantPrice": { "$ref": "../../common/json/base/AmountType.json#" },
		"unitsGrantedQuantity": { "$ref": "../../common/json/base/NumberType.json#" },
		"vestingSchedule": {
			"description": "Values that classify the various vesting schedules",
			"enum": [
				"Gradual",
				"Cliff"
			]
		},				
		"vestingPeriod": { "$ref": "../../common/json/base/NumberType.json#" },
		"accountingValue": { "$ref": "../../common/json/base/AmountType.json#" }
	},
	"required": ["eligibleIndicator", "grantType", "grantPrice", "unitsGrantedQuantity"]	
}
